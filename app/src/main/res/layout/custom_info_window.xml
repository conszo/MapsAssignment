<!-- res/layout/custom_info_window.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/infoWindowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"/>

    <TextView
        android:id="@+id/infoWindowEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Date"/>

    <TextView
        android:id="@+id/infoWindowEventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Time"/>

    <TextView
        android:id="@+id/infoWindowEventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Location"/>

    <TextView
        android:id="@+id/infoWindowEventGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Goal"/>
</LinearLayout>





